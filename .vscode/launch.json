    "version": "0.2.0",
    "configurations": [
        {
            "name": "Train",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": ["--relu-target", "relu2_1",
                     "--content-path", "./content/",
                     "--batch-size", "8",
                     "--feature-weight", "1",
                     "--pixel-weight", "1",
                     "--tv-weight", "0",
                     "--checkpoint", "/path/to/checkpointdir",
                     "--learning-rate", "1e-4",
                     "--max-iter", "30"]
        }
    ]
}